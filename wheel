#include <PRIZM.h>
#include <TELEOP.h>
PRIZM prizm;
PS4 ps4;

int SpeedM1;
int SpeedM2;

 void setup(){
  prizm.PrizmBegin();
  ps4.setDeadZone (LEFT,-10);     
  ps4.setDeadZone(RIGHT,10);      
  prizm.setMotorInvert(1,1);
}

  
 void loop() {
  ps4.getPS4();
  if(ps4.Connected) {
  if(ps4.Button(R1)){
    prizm.setMotorSpeeds(-100,-100);
  }    else if (ps4.Button(L1)){
    prizm.setMotorSpeeds(100,100);
  }
  else{
     SpeedM1 = ps4.Motor(LY);                  
     SpeedM2 = ps4.Motor(RY);                  
     prizm.setMotorSpeeds(-SpeedM1, -SpeedM2);
 }
  }
 }
